<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room</title>
    <script>
        const ROOM_ID = "<%= roomId %>";
        const USER_ID = "<%= userId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/static/stars.css">
    <style>
        body {
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: flex-start;
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .video-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #video-grid {
            width: 70%;
            height: 70%;
            max-width: 1020px;
            display: grid;
            grid-template-columns: repeat(auto-fill, 300px);
            grid-auto-rows: 300px;
            gap: 24px;
        }

        video {
            width: 300px;
            height: 300px;
            border: 1px solid white;
            box-shadow: 6px 12px <%=videoColor %>;
            object-fit: cover;
        }

        .chat-container {
            width: 30%;
            height: 100%;
            background-color: rgba(0.4, 0.4, 0.4, 0.5);
        }

        #chat-log {
            list-style: none;
            padding: 0;
            margin: 0;
            height: 94%;
            color: white;
            font-size: 16px;
            display: flex;
            flex-direction: column-reverse;
        }

        .chat-message {
            font-size: x-large;
            color: cornsilk;
            padding: 8px;
            font-style: normal;
            width: fit-content;
            max-width: 80%;
            margin: 5px 7px;
        }

        .my-message {
            background: lightblue;
            border-radius: 5px;
            align-self: flex-start;
        }

        .other-message {
            background: crimson;
            border-radius: 5px;
            align-self: flex-end;
        }

        #chat-prompt {
            height: 6%;
            width: 100%;
            padding: 14;
            font-size: medium;
            border: none;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <!-- Background stars -->
    <div id='stars'></div>
    <div id='stars2'></div>
    <div id='stars3'></div>

    <!-- Chat -->
    <aside class="chat-container">
        <ul id="chat-log">

        </ul>
        <form id="chat-form" action="">
            <input type="text" name="prompt" id="chat-prompt" placeholder="Say hi...">
        </form>
    </aside>

    <!-- Video stuff -->
    <main class="video-container">
        <div id="video-grid"></div>
    </main>


    <script src="/static/script.js"></script>
</body>

</html>